#include<bits/stdc++.h> 
using namespace std;
int twodiff(int a[], int n,int target) {
        int c=0;
        for(int i=0;i<n;i++)
        {
           for(int j=i+1;j<n;j++) 
           {
               if(a[i]-a[j]==target||a[j]-a[i]==target)
               {    
                   c++;
               }
           }
            
        }
        
    return c;  
    }
int main()
{
    int a[]={1,51,84,21,31};
    int n=5;
    cout<<twodiff(a,n,20); 
    
    return 0;
}
